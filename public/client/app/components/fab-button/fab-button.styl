@import 'nib'

.fab-container
	position fixed
	bottom 20px
	right 20px
	z-index 2
	@media screen and (max-width: 600px)
		bottom 10px
		right 10px
	
.fab-rotate
	transform rotate(135deg)

.fab
	background-color $accent-color
	
.fab:hover
	@extend .paper-shadow-z1
	
.fab-icon
	transition all .2s ease-in-out
	
.fab-icon-hover
	@extend .fab-rotate
	transition all .2s ease-in-out
		
.fab-mini-icon
	color $secondary-text-color!important