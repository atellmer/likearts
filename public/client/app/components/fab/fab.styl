@import 'nib'

.fab-container
	position fixed
	bottom 20px
	right 20px
	z-index 10
	@media screen and (max-width: 600px)
		bottom 5px
		right 5px
	
.fab-container .fab-checkbox
	display none
	
.fab-container .fab-button
	position relative
	width 56px
	height 56px
	background-color $accent-color
	border-radius 50%
	margin 0
	cursor pointer
	transition .2s transform ease-in-out
	z-index 1
	@extend .paper-shadow-z1, .flex
	
.fab-container .fab-button__icon
	display inline-block
	width 16px
	height 2px
	background-color #FFF
	transition .2s all ease-in-out
	&::after
		content ''
		position absolute
		display inline-block
		width 16px
		height 2px
		background-color #FFF
		transition .2s transform ease-in-out
		transform translate3D(0, 0, 0) rotate(90deg)
		transform-origin 50% 50%
	
.fab-checkbox:checked + .fab-button
	transform scale(1.08)
	
.fab-checkbox:checked + .fab-button .fab-button__icon
	transform rotate(135deg)
	&::after
		transform translate3D(0, 0, 0) rotate(-90deg)
	
.fab-container .mini-buttons
	position absolute
	top 50%
	left 50%
	transform translate3D(-50%, -50%, 0)
	@extend .flex
	flex-wrap wrap
	z-index 0
	opacity 0
	transition .2s opacity ease-in-out
	
.fab-container .mini-buttons__item
	width 40px
	height 40px
	border-radius 50%
	background-color $accent-color
	@extend .paper-shadow-z1, .flex
	transition .2s all ease-in-out
	cursor pointer
	margin 5px
	opacity 0
	&:nth-child(1)
		background-color #43A047
	&:nth-child(2)
		background-color #9C27B0
	
.fab-checkbox:checked ~ .mini-buttons
	opacity 1
	
.fab-checkbox:checked ~ .mini-buttons .mini-buttons__item
	&:nth-child(1)
		animation slide-top-1 .3s 1 ease-in-out
		transform translate3D(0, -30px, 0)
		opacity 1
	&:nth-child(2)
		animation slide-top-2 .4s 1 ease-in-out
		transform translate3D(0, -125px, 0)
		opacity 1
		
		
@keyframes slide-top-1 {
	0% {
		opacity 1
		transform translate3D(0, 0, 0)
	}
	50% {
		transform translate3D(0, -40px, 0)
	}
	80% {
		transform translate3D(0, -20px, 0)
	}
	100% {
		transform translate3D(0, -30px, 0)
	}
}

@keyframes slide-top-2 {
	0% {
		opacity 1
		transform translate3D(0, -30px, 0)
	}
	50% {
		transform translate3D(0, -145px, 0)
	}
	80% {
		transform translate3D(0, -115px, 0)
	}
	100% {
		transform translate3D(0, -125px, 0)
	}
}

.fab-container .mini-buttons__icon
	color #FFF